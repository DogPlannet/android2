<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="2"
    android:orientation="horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/dialog_box">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:layout_marginTop="4dp"
            android:id="@+id/move_gif"
            android:layout_width="135dp"
            android:layout_height="135dp"
            android:background="@drawable/movedog"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/camer_shot"
            android:background="@drawable/camera_shot"
            app:layout_constraintTop_toBottomOf="@id/move_gif"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp"
            />
        <TextView
            android:id="@+id/camera_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사진기록"
            android:textSize="12dp"
            android:layout_marginTop="-6dp"
            android:textColor="#767676"
            app:layout_constraintTop_toBottomOf="@id/camer_shot"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:text="0m"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/camera_text"
            app:layout_constraintTop_toTopOf="@id/camer_shot"
            app:layout_constraintBottom_toBottomOf="@id/camer_shot"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:text="거리"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/camer_shot"
            app:layout_constraintTop_toTopOf="@id/camera_text"
            app:layout_constraintBottom_toBottomOf="@id/camera_text"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:text="00:01"
            app:layout_constraintStart_toEndOf="@id/camer_shot"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/camer_shot"
            app:layout_constraintBottom_toBottomOf="@id/camer_shot"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:text="산책시간"
            app:layout_constraintStart_toEndOf="@id/camer_shot"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/camera_text"
            app:layout_constraintBottom_toBottomOf="@id/camera_text"
            />


        <View
            android:id="@+id/walk_dvide_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#999999"
            app:layout_constraintTop_toBottomOf="@id/camera_text"
            app:layout_constraintStart_toStartOf="@+id/start1"
            app:layout_constraintEnd_toEndOf="@+id/end1"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />
        <View
            android:id="@+id/start1"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:background="#00000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <View
            android:id="@+id/end1"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:background="#00000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"

            />

        <ImageButton
            android:id="@+id/walk_stop_image"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:background="@drawable/walk_stop"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/walk_dvide_line"/>

        <TextView
            android:id="@+id/walk_stop_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="산책중지"
            android:textSize="12dp"
            android:textColor="#767676"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@id/walk_stop_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="12dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>