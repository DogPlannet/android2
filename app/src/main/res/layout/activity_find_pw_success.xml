<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FindPwSuccessActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/back_button"
        android:layout_width="8.5dp"
        android:layout_height="16.5dp"
        android:background="@drawable/backbtn"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/logo"
        android:layout_width="189dp"
        android:layout_height="119dp"
        android:layout_marginTop="180dp"
        android:background="@drawable/logo2"
        android:layout_marginBottom="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/background"/>

    <View
        android:id="@+id/background"
        android:layout_width="340dp"
        android:layout_height="100dp"
        android:background="@drawable/background1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="150dp"
        app:layout_constraintBottom_toTopOf="@+id/go_login_btn"/>

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입 시 설정한 비밀번호는"
        android:textColor="#574444"
        android:textSize="13dp"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="@+id/background"
        app:layout_constraintStart_toStartOf="@+id/background"
        app:layout_constraintTop_toTopOf="@+id/background" />

    <LinearLayout
        android:id="@+id/pw_layout"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/text1"
        app:layout_constraintStart_toStartOf="@+id/background"
        app:layout_constraintEnd_toEndOf="@id/background">

    <TextView
        android:id="@+id/receive_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="22dp"
        android:text="ddd"
        android:layout_gravity="center"
        />

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="입니다."
            android:textColor="#574444"
            android:textSize="13dp"
            android:layout_marginStart="3dp"
            android:layout_gravity="bottom"
            app:layout_constraintEnd_toEndOf="@id/background"
            app:layout_constraintStart_toEndOf="@id/background"
            android:gravity=""/>
    </LinearLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/go_login_btn"
        android:layout_width="340dp"
        android:layout_height="45dp"
        android:layout_marginBottom="56dp"
        android:background="@drawable/start_button"
        android:gravity="center"
        android:text="로그인 화면으로 이동"
        android:textColor="#FFF3E5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>