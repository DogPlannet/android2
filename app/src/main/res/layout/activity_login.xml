<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_login"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/planet_icon"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/deletesoon" />

    <TextView
        android:id="@+id/tv_id"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="7dp"
        android:text="아이디"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold">
    </TextView>

    <EditText
        android:id="@+id/et_id"
        android:layout_width="360dp"
        android:layout_height="43dp"
        android:layout_gravity="center"
        android:background="@drawable/info_edittext_rounded_corner_rectangle"
        android:hint="아이디를 입력해주세요."
        android:textSize="16dp">
    </EditText>

    <TextView
        android:id="@+id/tv_pw"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="7dp"
        android:text="비밀번호"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold">
    </TextView>

    <EditText
        android:id="@+id/et_pw"
        android:layout_width="360dp"
        android:layout_height="43dp"
        android:layout_gravity="center"
        android:background="@drawable/info_edittext_rounded_corner_rectangle"
        android:hint="비밀번호를 입력해주세요."
        android:textSize="16dp">
    </EditText>

    <Button
        android:id="@+id/login_btn"
        android:layout_width="233dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/agree_nextbtn_color"
        android:text="로그인"
        android:textStyle="bold"
        android:textColor="@color/btn_back"/>

    <Button
        android:id="@+id/info_btn"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_clear"
        android:text="회원가입"
        android:textColor="@color/btn_info"
        android:textSize="12dp">
    </Button>

    <Button
        android:id="@+id/find_btn"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/btn_clear"
        android:text="아이디 / 비밀번호 찾기"
        android:textColor="@color/btn_text"
        android:textSize="12dp">
    </Button>


</LinearLayout>